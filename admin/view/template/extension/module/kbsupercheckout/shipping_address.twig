                                                            {% endif %} 
                                                            <label class="require2 col-sm-3" for="logged_shipping_address_fields_{{ field['id'] }}_require">{{ settings_require }}</label>
                                                        {% endif %} 
                                                    {% endif %} 
                                                    {% if (show_warning) %} 
                                                            <span class="store_disabled_msg" data-toggle="tooltip" title="{{ field_disabled_supercheckout_tooltip }}" style="color: red">
                                                                {{ text_warning }}
                                                            </span>
                                                    {% endif %} 
                                                </td>
                                                <td class="reorder">
                                                    <i class="fa fa-reorder"></i>
                                                </td>
                                            </tr>
                                            {% endfor %} 
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- layout-->
                    </form>
                </div>
                    <!-- content tabs-->
            </div>
                <!-- box -->
        </div>
    </div>
</div> <!-- row -->

