                                                                {% else %} 
                                                                    <input class="payment_check1 col-sm-3" type="checkbox" value="1" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][display]" id="logged_shipping_address_fields_{{ field['id'] }}_display" />
