                                                                {% else %} 

                                                                    <input class="payment_check1 col-sm-3" type="checkbox" value="1" name="supercheckout[option][guest][shipping_address][fields][{{ field['id'] }}][display]" id="guest_shipping_address_fields_{{ field['id'] }}_display"/>
                                                                    <label class="checkboxinline payment_show1 col-sm-3">{{ settings_display }}</label>
                                                                {% endif %}
                                                            {% else %} 
                                                                {% set show_warning = 1 %} 

                                                                <input class="payment_check1 col-sm-3" type="checkbox" value="1" name="supercheckout[option][guest][shipping_address][fields][{{ field['id'] }}][display]" disabled="disabled" id="guest_shipping_address_fields_{{ field['id'] }}_display"/>
