                                                            {% endif %} 
                                                        {% else %} 
                                                            {% if (supercheckout['option']['logged']['shipping_address']['fields'][field['id']]['display'] is defined and supercheckout['option']['logged']['shipping_address']['fields'][field['id']]['display'] == 1) %} 
                                                                <input class="check1 col-sm-3" type="checkbox" value="1" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][display]" checked="checked" id="logged_shipping_address_fields_{{ field['id'] }}_display"/>
                                                            {% else %} 
                                                                <input class="check1 col-sm-3" type="checkbox" value="1" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][display]" id="logged_shipping_address_fields_{{ field['id'] }}_display" />
                                                            {% endif %} 
                                                        {% endif %} 
