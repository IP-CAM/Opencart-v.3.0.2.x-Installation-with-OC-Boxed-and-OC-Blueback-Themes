                                                </td>
                                                <td>
                                                    {% if (supercheckout['option']['logged']['shipping_address']['fields'][field['id']]['display'] is defined) %} 
                                                        <input type="hidden" value="0" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][display]" />
                                                        {% if ( custom_group_field_array is defined and (field['id'] in custom_group_field_array)) %} 
                                                            {% if (custom_fields_status[field['id']] is defined and custom_fields_status[field['id']] == 1) %} 
                                                                {% set field_status = field['id'] ~ '_display' %}
                                                            {% else %} 
                                                                {% set field_status = 0 %}
                                                            {% endif %}

                                                            {% if (field_status is defined and field_status) %} 
                                                                {% if (supercheckout['option']['logged']['shipping_address']['fields'][field['id']]['display'] is defined and supercheckout['option']['logged']['shipping_address']['fields'][field['id']]['display'] == 1) %} 
