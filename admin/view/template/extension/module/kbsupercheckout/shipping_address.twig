<!-- Main Container Fluid -->
<div id="content" class="bootstrap">
    <link type="text/css" rel="stylesheet" href="view/javascript/jquery/jquery-ui/jquery-ui.css" >
    <script type="text/javascript" src="view/javascript/jquery/jquery-ui/jquery-ui.js"></script>
    <script type="text/javascript" src="view/javascript/supercheckout/js/jquery.tinysort.min.js"></script>
    <style>
        #sortable {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 60%; 
        }
    </style>
    <div id="velsof_plugin">
        <div class="page-header">
            <div class="container-fluid">
                <div class="pull-right">
                    <button type="submit" id="save-button" form="form-shipping-address" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                    <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
                </div>
                <h1>{{ heading_title }}</h1>
                <ul class="breadcrumb">
                    {% for breadcrumb in breadcrumbs %} 
                            <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                    {% endfor %} 
                </ul>
                {% if (success) %} 
                <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
                {% endif %} 
                <div id="error_message"></div>
            </div>
        </div>
        <div class="container-fluid">
            {% if (error_warning) %} 
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
            {% endif %} 
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ store_switcher }} 
