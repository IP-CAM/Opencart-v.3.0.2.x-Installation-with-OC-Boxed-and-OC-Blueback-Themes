                                                                        <input  class="payment_check2 col-sm-3" type="checkbox" value="1" name="supercheckout[option][guest][shipping_address][fields][{{ field['id'] }}][require]" disabled="disabled" id="guest_shipping_address_fields_{{ field['id'] }}_require_disable" />
                                                                        <label class="payment_require1 col-sm-3" for="guest_shipping_address_fields_{{ field['id'] }}_require">{{ settings_require }}</label>
                                                                        {% endif %} 
                                                                {% else %}         
                                                                    {% if (supercheckout['option']['guest']['shipping_address']['fields'][field['id']]['require'] is defined) %} 
                                                                    <input type="hidden" value="0" name="supercheckout[option][guest][shipping_address][fields][{{ field['id'] }}][require]" />
                                                                        {% if (supercheckout['option']['guest']['shipping_address']['fields'][field['id']]['require'] == 1) %} 
                                                                        <input  class="check2 col-sm-3" type="checkbox" value="1" name="supercheckout[option][guest][shipping_address][fields][{{ field['id'] }}][require]" checked="checked" id="guest_shipping_address_fields_{{ field['id'] }}_require"/>
                                                                        {% else %} 
                                                                        <input  class="check2 col-sm-3" type="checkbox" value="1" name="supercheckout[option][guest][shipping_address][fields][{{ field['id'] }}][require]" id="guest_shipping_address_fields_{{ field['id'] }}_require" />
                                                                        {% endif %} 
                                                                        <label class="require1 col-sm-3" for="guest_shipping_address_fields_{{ field['id'] }}_require">{{ settings_require }}</label>
