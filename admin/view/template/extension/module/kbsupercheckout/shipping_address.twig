                                                        {% if (supercheckout['option']['logged']['shipping_address']['fields'][field['id']]['require'] is defined) %} 
                                                            <input type="hidden" value="0" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][require]" />
                                                            {% if ( custom_group_field_array is defined and (field['id'] in custom_group_field_array)) %} 
                                                                {% set field_status = field['id'] ~ '_required' %}
                                                                {% if (field_status is defined and field_status) %} 
                                                                    {% if (supercheckout['option']['logged']['shipping_address']['fields'][field['id']]['require'] == 1) %} 
                                                                        <input class="payment_check3 col-sm-3" type="checkbox" value="1" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][require]" checked="checked" id="logged_shipping_address_fields_{{ field['id'] }}_require"/>
                                                                    {% else %} 
                                                                        <input class="payment_check3 col-sm-3" type="checkbox" value="1" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][require]" id="logged_shipping_address_fields_{{ field['id'] }}_require" />
                                                                    {% endif %} 
                                                                {% else %} 
                                                                    {% set show_warning = 1 %} 
                                                                    <input class="payment_check3 col-sm-3" type="checkbox" value="1" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][require]" disabled="disabled" id="logged_shipping_address_fields_{{ field['id'] }}_require_disable" />
                                                                {% endif %} 
                                                            {% else %} 
                                                                {% if (supercheckout['option']['logged']['shipping_address']['fields'][field['id']]['require'] == 1) %} 
                                                                    <input class="check3 col-sm-3" type="checkbox" value="1" name="supercheckout[option][logged][shipping_address][fields][{{ field['id'] }}][require]" checked="checked" id="logged_shipping_address_fields_{{ field['id'] }}_require"/>
