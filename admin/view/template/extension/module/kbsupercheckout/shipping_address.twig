<script type="text/javascript">
//adding alternate colors to  column
$(function () {
    $('.alternate').each(function () {
        $('tr:odd', this).addClass('odd').removeClass('even');
        $('tr:even', this).addClass('even').removeClass('odd');
    });
});
{% for field in supercheckout['step']['shipping_address']['fields'] %} 
    $("#guest_shipping_address_fields_" + "{{ field['id'] }}" + "_display").change(function () {
        if ($(this).is(":checked")) {
            $("#uniform-guest_shipping_address_fields_" + "{{ field['id'] }}" + "_require").removeClass('disabled');

            $("#guest_shipping_address_fields_" + "{{ field['id'] }}" + "_require").removeAttr('disabled');
        } else {
            $("#guest_shipping_address_fields_" + "{{ field['id'] }}" + "_require").attr('disabled', 'disabled');
            $("#guest_shipping_address_fields_" + "{{ field['id'] }}" + "_require").removeAttr('checked');
            $("#uniform-guest_shipping_address_fields_" + "{{ field['id'] }}" + "_require").addClass('disabled');
        }
    });
    $("#logged_shipping_address_fields_" + "{{ field['id'] }}" + "_display").change(function () {
        if ($(this).is(":checked")) {
            $("#uniform-logged_shipping_address_fields_" + "{{ field['id'] }}" + "_require").removeClass('disabled');

            $("#logged_shipping_address_fields_" + "{{ field['id'] }}" + "_require").removeAttr('disabled');
        } else {
            $("#logged_shipping_address_fields_" + "{{ field['id'] }}" + "_require").attr('disabled', 'disabled');
            $("#logged_shipping_address_fields_" + "{{ field['id'] }}" + "_require").removeAttr("checked");
            $("#uniform-logged_shipping_address_fields_" + "{{ field['id'] }}" + "_require").addClass('disabled');

        }
    });
    $("#logged_shipping_address_fields_" + "{{ field['id'] }}" + "_display").trigger('change');
    $("#guest_shipping_address_fields_" + "{{ field['id'] }}" + "_display").trigger('change');
{% endfor %} 
</script>
<script>
  $( function() {
    $('#sortable > tr').tsort({attr:'sort-data'});
    $( "#sortable" ).sortable({
        revert: true,
        cursor: "move",
        items: "> .ui-state-default",
        containment: "document",
        distance: 5 ,
        opacity: 0.8,
        stop: function( event, ui ) {
            $(this).find("tr").each(function(i, el){
                $(this).find(".sort").val($(el).index())
                $('.alternate').each(function() {
                    $('tr:odd',  this).addClass('odd').removeClass('even');
                    $('tr:even', this).addClass('even').removeClass('odd');
                });
            });
        }
    });
    $( "#sortable" ).disableSelection();
  });
</script>
