{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
          <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
					<div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_digitcart_shipping_alert_status" class="form-control">
                  <option value="0">{{ text_disabled }}</option>
                  <option value="1" {% if (module_digitcart_shipping_alert_status) %}selected="selected"{% endif %}>{{ text_enabled }}</option>
              </select>
            </div>
          </div>
					<div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_popup }}</label>
            <div class="col-sm-10">
              <select name="module_digitcart_shipping_alert_popup" class="form-control">
                  <option value="0">{{ text_disabled }}</option>
                  <option value="1" {% if (module_digitcart_shipping_alert_popup) %}selected="selected"{% endif %}>{{ text_enabled }}</option>
              </select>
							<br>
							<div class="text-muted">{{ help_popup }}</div>
            </div>
          </div>
					<div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_message }}</label>
            <div class="col-sm-10">
              {% for language in languages %} 
								<div class="input-group">
									<span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /></span>
									<input type="text" name="module_digitcart_shipping_alert_message[{{ language['language_id'] }}]" value="{{ module_digitcart_shipping_alert_message[language['language_id']] is not empty ? module_digitcart_shipping_alert_message[language['language_id']] : text_message }}" placeholder="{{ entry_message }}" class="form-control" />
								</div>
								<br>
							{% endfor %} 
							<div class="text-muted">{{ help_message }}</div>
            </div>
          </div>
					<div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_alert }}</label>
            <div class="col-sm-10">
              <select name="module_digitcart_shipping_alert_alert" class="form-control">
                  <option value="info" {% if (module_digitcart_shipping_alert_alert == 'info') %}selected="selected"{% endif %}>{{ alert_info }}</option>
									<option value="success" {% if (module_digitcart_shipping_alert_alert == 'success') %}selected="selected"{% endif %}>{{ alert_success }}</option>
									<option value="warning" {% if (module_digitcart_shipping_alert_alert == 'warning') %}selected="selected"{% endif %}>{{ alert_warning }}</option>
									<option value="danger" {% if (module_digitcart_shipping_alert_alert == 'danger') %}selected="selected"{% endif %}>{{ alert_danger }}</option>
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}