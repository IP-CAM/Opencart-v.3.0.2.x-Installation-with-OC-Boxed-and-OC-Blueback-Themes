{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-brilliant_search" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-brilliant_search" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_brilliant_search_status" id="input-status" class="form-control">
                {% if module_brilliant_search_status == 1 %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-ajax-enable">{{ text_ajax_enable }}</label>
            <div class="col-sm-10">
              <select name="module_brilliant_search_ajax_enable" id="input-ajax-enable" class="form-control">
                {% if module_brilliant_search_ajax_enable == 1 %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-include-categories">{{ text_include_categories }}</label>
            <div class="col-sm-10">
              <select name="module_brilliant_search_include_categories" id="input-include-categories" class="form-control">
                {% if module_brilliant_search_include_categories %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
		  <div class="form-group required">
			<label class="col-sm-2 control-label" for="input-ajax-max-results-total"><span data-toggle="tooltip" title="{{ help_ajax_max_results_total }}">{{ text_ajax_max_results_total }}</span></label>
			<div class="col-sm-10">
			  <input type="text" name="module_brilliant_search_ajax_max_results_total" value="{{ module_brilliant_search_ajax_max_results_total }}" placeholder="{{ text_ajax_max_results_total }}" id="input-ajax-max-results-total" class="form-control" />
			  {% if error_ajax_max_results_total %}
			  <div class="text-danger">{{ error_ajax_max_results_total }}</div>
			  {% endif %}
			</div>
		  </div>
		  <div class="form-group required">
			<label class="col-sm-2 control-label" for="input-ajax-max-results-cats"><span data-toggle="tooltip" title="{{ help_ajax_max_results_cats }}">{{ text_ajax_max_results_cats }}</span></label>
			<div class="col-sm-10">
			  <input type="text" name="module_brilliant_search_ajax_max_results_cats" value="{{ module_brilliant_search_ajax_max_results_cats }}" placeholder="{{ text_ajax_max_results_cats }}" id="input-ajax-max-results-cats" class="form-control" />
			  {% if error_ajax_max_results_cats %}
			  <div class="text-danger">{{ error_ajax_max_results_cats }}</div>
			  {% endif %}
			</div>
		  </div>
		  <div class="form-group required">
			<label class="col-sm-2 control-label" for="input-ajax-max-results-prods"><span data-toggle="tooltip" title="{{ help_ajax_max_results_prods }}">{{ text_ajax_max_results_prods }}</span></label>
			<div class="col-sm-10">
			  <input type="text" name="module_brilliant_search_ajax_max_results_prods" value="{{ module_brilliant_search_ajax_max_results_prods }}" placeholder="{{ text_ajax_max_results_prods }}" id="input-ajax-max-results-prods" class="form-control" />
			  {% if error_ajax_max_results_prods %}
			  <div class="text-danger">{{ error_ajax_max_results_prods }}</div>
			  {% endif %}
			</div>
		  </div>
		  <div class="form-group required">
			<label class="col-sm-2 control-label" for="input-ajax-type-delay"><span data-toggle="tooltip" title="{{ help_ajax_type_delay }}">{{ text_ajax_type_delay }}</span></label>
			<div class="col-sm-10">
			  <input type="text" name="module_brilliant_search_ajax_type_delay" value="{{ module_brilliant_search_ajax_type_delay }}" placeholder="{{ text_ajax_type_delay }}" id="input-ajax-type-delay" class="form-control" />
			  {% if error_ajax_type_delay %}
			  <div class="text-danger">{{ error_ajax_type_delay }}</div>
			  {% endif %}
			</div>
		  </div>
		  <div class="form-group required">
			<label class="col-sm-2 control-label" for="input-fuzzyness"><span data-toggle="tooltip" title="{{ help_fuzzyness }}">{{ text_fuzzyness }}</span></label>
			<div class="col-sm-10">
			  <input type="text" name="module_brilliant_search_fuzzyness" value="{{ module_brilliant_search_fuzzyness }}" placeholder="{{ text_fuzzyness }}" id="input-fuzzyness" class="form-control" />
			  {% if error_fuzzyness %}
			  <div class="text-danger">{{ error_search_fuzzyness }}</div>
			  {% endif %}
			</div>
		  </div>
        </form><div class="text-center">This extension is &copy; by <a href="http://www.antropy.co.uk/">Antropy</a>. <br/>Checkout our other extensions at <a target="_blank" href="https://www.opencart.com/index.php?route=marketplace/extension&filter_member=judge">www.opencart.com</a>. For updates of this extension you can check <a target="_blank" href="https://www.opencart.com/index.php?route=marketplace/extension/info&extension_id=23494">here</a>.</div>
      </div>
    </div>
  </div>
</div>
{{ footer }}
